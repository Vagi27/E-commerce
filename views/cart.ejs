<html lang="en">

<head>

    <title>Document</title>
    <link href="styles/cart.css" rel="stylesheet">
</head>

<body>
    <header>
        <%-include('partial.ejs',{user:user})%>
    </header>
    <div class="maincontainer">
        <div class="allProductContainer">
            <% for(let i=0;i<items.length;i++){%>
                <div id="par<%= items[i].filename %>" class="productImageContainer">
                    <img src="products/<%= items[i].filename %>" class="productImage">

                    <span style="word-wrap: break-word; max-width: 20em; padding:0.5em; text-align:center; ">
                        <%= items[i].name %>
                    </span>
                    <span id="p<%= items[i].filename %>" class="prizeContainer">
                        â‚¹ <%=items[i].prize.slice(1)* items[i].quantity%>
                    </span>
                    <div class="quantityContainer">
                        <button id="<%= items[i].filename %>" class="operation"
                            onclick="quantitymanipulator(event)">-</button>
                        <span id="q<%= items[i].filename %>" class="quantity">
                            <%=items[i].quantity%>
                        </span>
                        <button id="<%= items[i].filename %>" class="operation"
                            onclick="quantitymanipulator(event)">+</button>
                    </div>
                </div>
                <%}%>
        </div>
    </div>

    <script src="cart.js"></script>
</body>

</html>