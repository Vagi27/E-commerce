<html>

<head>
    <link href="styles/home.css" rel="stylesheet">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>

    <%- include('partial.ejs',{user:user}) %>
        <div id="mainContainer" class="container-fluid">
            <div class="productDivContainer" id="productDivContain">
                <% for(let i=0;i<productList.length;i++){ %>
                    <div class="productDiv">
                        <img src="products/<%= productList[i].filename %>" class="productImage"
                            onclick="getdetails(event)" />
                        <div>
                            <span class="nameSpan">
                                <%= productList[i].name %>
                            </span>
                        </div>
                        <div class="prizeContainer">
                            <span class="prizeSpan">
                                <%= productList[i].prize %>
                            </span>
                            <button class="btn btn-primary" onclick="getdetails(event)">
                                View Details
                            </button>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
        <dialog id="dialogBox">
            <img src="cross.png" class="crossImg" onclick="crossfunc()">
            <div class="dialogcontainer">
                <div id="leftDiv">
                    <img id="dialogImg">
                </div>
                <div id="rightDiv">
                    <span id="dialogName"></span>
                    <div id="dialogDescription"></div>
                    <div id="bottomDiv">
                        <span id="dialogPrize"></span>
                        <button id="cartAdder" class="btn btn-primary">Add to cart</button>
                    </div>
                </div>
            </div>

        </dialog>

        <% if(totalCount!==true){ %>
            <a>
                <button id="loadmore" class="btn btn-primary loadmore" onclick="loadmore()"> Load More </button>
            </a>
            <%}%>

                <script src="home.js"></script>
</body>

</html>